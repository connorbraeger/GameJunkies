@model GameJunkies.Models.ConsoleGame.ConsoleGamesCreates

@{
    ViewBag.Title = "ConsoleLink";
}

<h2>ConsoleLink</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.GameId)
    
    <table class="table">
        <tr>
            <th>
                Name of Console
            </th>
            <th>
                Is the Game Linked to this Console
            </th>

        </tr>

        @for (int i = 0; i < Model.ConsoleList.Count; i++)
        {
            <tr>
                <td>
                    @Model.ConsoleList[i].ConsoleName
                </td>
                <td>
                    <div class="checkbox">
                        @Html.HiddenFor(model => model.ConsoleList[i].ConsoleName)
                        @Html.HiddenFor(model => model.ConsoleList[i].ConsoleId)
                        @Html.EditorFor(model => model.ConsoleList[i].isLinked)
                        @Html.ValidationMessageFor(model => model.ConsoleList[i].isLinked, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>
        }


    </table>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
