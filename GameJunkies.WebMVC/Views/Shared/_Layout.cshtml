<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GameJunkies</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   
    

</head>
<body class="">


    <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: #e3f2fd;">
        <a class="navbar-brand" href="#">GameJunkies</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-start" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">

                    @Html.ActionLink("Home", "Index", "Home", routeValues: null, new { @class = "nav-link text-dark" })
                </li>
                <li class="nav-item" src =>
                    @Html.ActionLink("About", "About", "Home", routeValues: null, new { @class = "nav-link text-dark" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contact", "Contact", "Home", routeValues: null, new { @class = "nav-link text-dark" })
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Repos
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @Html.ActionLink("Games", "Index", "Game", routeValues: null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Consoles", "Index", "Console", routeValues: null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Retailers", "Index", "Retailer", routeValues: null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Publishers", "Index", "Publisher", routeValues: null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Developers", "Index", "Developer", routeValues: null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Genres", "Index", "Genre", routeValues: null, new { @class = "dropdown-item" })

                        </div>
                    </li>
                }


            </ul>
            <form class="form-inline">

                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Database</label>
                <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                    <option value="Game">Games</option>
                    <option value="Console">Consoles</option>
                    <option value="Genre">Genres</option>
                    <option value="Retailer">Retailers</option>
                    <option value="Publisher">Publishers</option>
                    <option value="Developer">Developers</option>
                </select>

                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" id="searchText">
                <button class="btn btn-outline-primary my-2 my-sm-0" type="button" id="universalSearch">Search</button>
            </form>
        </div>
        @Html.Partial("_LoginPartial")
    </nav>
  

    <div class="container body-content" style="padding-top:3rem;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Connor Braeger</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")
    @RenderSection("scripts", required: false)
</body>
</html>
